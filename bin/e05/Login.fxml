<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.text.*?>
<?import javafx.scene.effect.*?>
<?import javafx.geometry.*?>
<?import java.lang.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane fx:id="root" xmlns="http://javafx.com/javafx/8.0.40" xmlns:fx="http://javafx.com/fxml/1" fx:controller="e05.LoginController">
   <top>
      <Label alignment="TOP_CENTER" contentDisplay="CENTER" prefHeight="32.0" prefWidth="302.0" text="E05 Login" textAlignment="CENTER" textFill="#2211bf" BorderPane.alignment="CENTER">
         <font>
            <Font name="System Bold" size="18.0" />
         </font>
         <opaqueInsets>
            <Insets />
         </opaqueInsets>
         <padding>
            <Insets bottom="15.0" />
         </padding>
      </Label>
   </top>
   <opaqueInsets>
      <Insets left="5.0" />
   </opaqueInsets>
   <center>
      <VBox prefHeight="101.0" prefWidth="302.0" BorderPane.alignment="CENTER">
         <children>
            <HBox prefHeight="48.0" prefWidth="302.0" spacing="10.0">
               <children>
                  <Label text="Username:" />
                  <TextField id="username" fx:id="username" />
               </children>
            </HBox>
            <HBox prefHeight="52.0" prefWidth="302.0" spacing="14.0">
               <children>
                  <Label text="Password:" />
                  <PasswordField fx:id="password" />
               </children>
            </HBox>
         </children>
         <padding>
            <Insets left="5.0" right="5.0" />
         </padding>
      </VBox>
   </center>
   <bottom>
      <HBox alignment="CENTER_RIGHT" prefHeight="56.0" prefWidth="302.0" spacing="10.0" BorderPane.alignment="CENTER">
         <children>
            <Label fx:id="result" />
            <Button id="login" fx:id="login" defaultButton="true" mnemonicParsing="false" onAction="#handleLoginButton" text="Login" />
            <Button id="cancel" fx:id="cancel" cancelButton="true" mnemonicParsing="false" onAction="#handleCancelButton" text="Cancel" />
         </children>
         <opaqueInsets>
            <Insets />
         </opaqueInsets>
      </HBox>
   </bottom>
   <padding>
      <Insets bottom="15.0" left="15.0" right="15.0" top="20.0" />
   </padding>
</BorderPane>
